<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CancelarViajePasajero">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/BtnCancelarVIajPas"
                android:layout_width="209dp"
                android:layout_height="38dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="12dp"
                android:text="Cancelar Viaje"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TxtTrasladoACanPas" />

            <TextView
                android:id="@+id/TxtTrasladoACanPas"
                android:layout_width="312dp"
                android:layout_height="30dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:text="No traslado a ningun pasajero"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ratingBarCanViajPas" />

            <RatingBar
                android:id="@+id/ratingBarCanViajPas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="12dp"
                android:numStars="5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TxtCelularConductorCanViaj" />

            <TextView
                android:id="@+id/TxtCelularConductorCanViaj"
                android:layout_width="205dp"
                android:layout_height="26dp"
                android:layout_marginStart="108dp"
                android:layout_marginTop="8dp"
                android:text="Celular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TxtNombreConductorCanviaj" />

            <TextView
                android:id="@+id/TxtNombreConductorCanviaj"
                android:layout_width="155dp"
                android:layout_height="35dp"
                android:layout_marginStart="96dp"
                android:layout_marginTop="16dp"
                android:text="Nombre"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView23" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="109dp"
                android:layout_height="29dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="8dp"
                android:text="Viajaras con"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/GrViajeCancelarViajePasajero" />

            <GridView
                android:id="@+id/GrViajeCancelarViajePasajero"
                android:layout_width="406dp"
                android:layout_height="120dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>