<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeConductor">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConstraintLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPreRegistroTitulo"
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="25dp"
                android:text="Tobias Olea Martinez"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ivHomeConductorCalificaciones"
                android:layout_width="242dp"
                android:layout_height="21dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="94dp"
                android:text="25 calificaciones"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivHomeConductorStar1" />

            <TextView
                android:id="@+id/ivHomeConductorProximosViajes"
                android:layout_width="243dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/proximosViajes"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivHomeConductorCalificaciones" />

            <ImageView
                android:id="@+id/ivHomeConductorStar4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toEndOf="@+id/ivHomeConductorStar3"
                app:layout_constraintTop_toBottomOf="@+id/tvPreRegistroTitulo"
                app:srcCompat="@mipmap/emptystar_foreground" />

            <ImageView
                android:id="@+id/ivHomeConductorStar5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toEndOf="@+id/ivHomeConductorStar4"
                app:layout_constraintTop_toBottomOf="@+id/tvPreRegistroTitulo"
                app:srcCompat="@mipmap/emptystar_foreground" />

            <ImageView
                android:id="@+id/ivHomeConductorStar3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toEndOf="@+id/ivHomeConductorStar2"
                app:layout_constraintTop_toBottomOf="@+id/tvPreRegistroTitulo"
                app:srcCompat="@mipmap/emptystar_foreground" />

            <ImageView
                android:id="@+id/ivHomeConductorStar1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPreRegistroTitulo"
                app:srcCompat="@mipmap/emptystar_foreground" />

            <ImageView
                android:id="@+id/ivHomeConductorStar2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toEndOf="@+id/ivHomeConductorStar1"
                app:layout_constraintTop_toBottomOf="@+id/tvPreRegistroTitulo"
                app:srcCompat="@mipmap/emptystar_foreground" />

            <GridView
                android:id="@+id/gvHomeConductorProximosVIajes"
                android:layout_width="0dp"
                android:layout_height="350dp"
                android:layout_margin="10sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:numColumns="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivHomeConductorProximosViajes" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>