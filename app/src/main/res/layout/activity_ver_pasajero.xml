<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerPasajero">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/BtnVpCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="144dp"
                android:layout_marginTop="44dp"
                android:text="Cancelar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/GrVpViaje" />

            <GridView
                android:id="@+id/GrVpViaje"
                android:layout_width="405dp"
                android:layout_height="130dp"
                android:layout_marginTop="64dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="128dp"
                android:layout_marginTop="44dp"
                android:text="Viaja con vos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TxtVPViajocon" />

            <TextView
                android:id="@+id/TxtVPViajocon"
                android:layout_width="197dp"
                android:layout_height="16dp"
                android:layout_marginStart="84dp"
                android:layout_marginTop="56dp"
                android:text="Viajo con"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/RBVpPasajero" />

            <RatingBar
                android:id="@+id/RBVpPasajero"
                android:layout_width="245dp"
                android:layout_height="46dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TxtVpNumero" />

            <TextView
                android:id="@+id/TxtVpNumero"
                android:layout_width="173dp"
                android:layout_height="23dp"
                android:layout_marginStart="116dp"
                android:layout_marginTop="32dp"
                android:text="Numero"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TxtVpNombre" />

            <TextView
                android:id="@+id/TxtVpNombre"
                android:layout_width="209dp"
                android:layout_height="0dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="68dp"
                android:text="Nombre"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>