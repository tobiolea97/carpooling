<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResponderSolicitud">

    <ScrollView
        android:layout_width="423dp"
        android:layout_height="645dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/btnResponderSoliRechazar"
                android:layout_width="140dp"
                android:layout_height="36dp"
                android:layout_marginStart="216dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="67dp"
                android:text="Rechazar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/GrResponderSoli" />

            <Button
                android:id="@+id/btnRespSoliAceptar"
                android:layout_width="137dp"
                android:layout_height="36dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="16dp"
                android:text="Aceptar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/GrResponderSoli" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="0dp"
                android:layout_height="26dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:text="Â¿Puedo Viajar con vos?"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TxtViajoRespSol" />

            <TextView
                android:id="@+id/TxtViajoRespSol"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="80dp"
                android:gravity="center"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ratingBarResponderSoli" />

            <RatingBar
                android:id="@+id/ratingBarResponderSoli"
                android:layout_width="241dp"
                android:layout_height="47dp"
                android:layout_marginStart="88dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="94dp"
                android:numStars="5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView17" />

            <TextView
                android:id="@+id/TxtNombreRespSol"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:text="Nombre"
                android:textSize="22dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <GridView
                android:id="@+id/GrResponderSoli"
                android:layout_width="0dp"
                android:layout_height="143dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView21" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="80dp"
                android:gravity="center"
                android:text="Numero"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TxtNombreRespSol" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="80dp"
                android:gravity="center"
                android:text="No hay lugares disponibles"
                android:textColor="@android:color/holo_red_light"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnResponderSoliRechazar" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>